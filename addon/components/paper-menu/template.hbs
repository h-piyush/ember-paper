<BasicDropdown
  @disabled={{@disabled}}
  @triggerComponent="paper-menu/trigger"
  @contentComponent="paper-menu/content"
  @calculatePosition={{this.calculatePosition}}
  @onClose={{this.close}}
  @onOpen={{this.open}}
  @registerAPI={{this.onRegisterAPI}}
  ...attributes
  as |dd|>
  {{yield (hash
    trigger=dd.Trigger
    content=dd.Content
    dropdown=dd
  )}}
</BasicDropdown>